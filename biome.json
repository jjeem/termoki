{
  "$schema": "https://biomejs.dev/schemas/1.1.2/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": ["coverage/**", "dist/**"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space"
  }
}
